<%if !@movies_list["Title"].nil?%>
<%count = @ind%>
<table id="movies">
  <tr>
    <td><%=count%></td>
    <td><%=@movies_list["Title"]%></td>
    <td><%=@movies_list["Year"]%></td>
    <td><%=image_tag "#{@movies_list['Poster']}", :style=>"height: 100px;"%></td>
    <td><%=check_box :fav,:field, {:class => "myclass"},:checked => false%></td>
<%= fields_for :movies_list do |m| %>
<%=m.hidden_field :imdbID,:index=>count,:value=>@movies_list["imdbID"]%>
<%=m.hidden_field :title,:index=>count,:value=>@movies_list["Title"]%>
<%=m.hidden_field :year,:index=>count,:value=>@movies_list["Year"]%>
<%end%>
</tr>
</table>
<%end%>
